    <script type="text/javascript">
    $(window).load(function() {
        // 页数
        var page = 0;
        // 每页展示6个
        var size = 2;
        // 图片个数
        // dropload
        $('.activeListA').dropload({
            scrollArea: window,
            loadDownFn: function(me) {
                page++;
                // 拼接HTML
                var result = '';
                $.ajax({
                    type: 'GET',
                    url: 'json/mine.json?page=' + page + '&size=' + size,
                    dataType: 'json',
                    success: function(data) {
                        var data = data.activeList;
                        var arrLen = data.length;
                        if (arrLen > 0) {
                            for (var i = 0; i < arrLen; i++) {

                                result += '<li><a href="英伦故事-详情.html" class="linkA"><img src="' + data[i].activeImg + '">' + '<div class="inner"> <p class="activeTitle">' + data[i].activeTitle + '</p><p class="activeInfo story">'+'<span class="time">' + data[i].activeTime + '</span>'+'</span></p></div></a></li>';

                            }
                            // 如果没有数据
                        } else {

                            // 锁定
                            me.lock();

                            // 这里是数据为空，有空白页
                            // $('body').addClass("setcolor");

                            // $('.voidmessage').css('display', 'block');

                            // $('.newNotification').css('display', 'none');

                            // 无数据
                            me.noData();
                        }
                        // 为了测试，延迟1秒加载
                        setTimeout(function() {
                            // 插入数据到页面，放到最后面
                            $('.activeListUl').append(result);

                            // 每次数据插入，必须重置
                            me.resetload();
                        }, 1000);
                    },
                    error: function(xhr, type) {
                        // alert('Ajax error!');
                        console.log('xhr!', xhr);
                        console.log('type!', type);
                        // 即使加载出错，也得重置
                        me.resetload();
                    }
                });
            }
        });
    });
    </script>
</body>

