    <link rel="stylesheet" href="style/dropload.css">
    <script type="text/javascript" src="js/dropload.min.js"></script>
    <script type="text/javascript">
    $(window).load(function() {
        // 页数
        var page = 0;
        // 每页展示6个
        var size = 5;
        // 图片个数
        // dropload
        $('.inWrap1').dropload({
            scrollArea: window,
            loadDownFn: function(me) {
                page++;
                // 拼接HTML
                var result = '';
                $.ajax({
                    type: 'GET',
                    url: 'json/mine.json?page=' + page + '&size=' + size,
                    dataType: 'json',
                    success: function(data) {
                        var data = data.yiminList;
                        var arrLen = data.length;
                        if (arrLen > 0) {
                            for (var i = 0; i < arrLen; i++) {

                                var spanT = "";

                                // if (data[i].type == "移民") {

                                //     spanT = '<span class="typeInvest" style="background: url(img/mine/immigrantIcon.png) 0% center no-repeat;background-size: 15px 15px">' + data[i].type + '</span>';

                                // }

                                result += '<dd><a href="投资详情界面.html" class="block qcfd"><div class="right ml15 inMain2Pic"><img src="' + data[i].imgUrl + '"></div>' + '<p class="cc2hyc wz16 bold shense hg24">' + data[i].title + '</p>' + '<p class="inMain2Tip wz12 qianse hg20">' + '<span class="typeInvest" style="background: url(img/mine/immigrantIcon.png) 0% center no-repeat;background-size: 15px 15px">' + data[i].type + '</span>' + '<span class="lastSpan">' + data[i].time + '</span></p></a> </dd>';

                            }
                            // 如果没有数据
                        } else {

                            // 锁定
                            me.lock();

                            // 这里是数据为空，有空白页
                            // $('body').addClass("setcolor");

                            // $('.voidmessage').css('display', 'block');

                            // $('.newNotification').css('display', 'none');

                            // 无数据
                            me.noData();
                        }
                        // 为了测试，延迟1秒加载
                        setTimeout(function() {
                            // 插入数据到页面，放到最后面
                            $('.inMain2').append(result);

                            // 每次数据插入，必须重置
                            me.resetload();
                        }, 1000);
                    },
                    error: function(xhr, type) {
                        alert('Ajax error!');
                        // 即使加载出错，也得重置
                        me.resetload();
                    }
                });
            }
        });
    });
    </script>
